    <ListView
        android:id="@+id/listViewTutorial"
        android:layout_width="309dp"
        android:layout_height="506dp"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/textTutName"
        tools:layout_editor_absoluteX="34dp"
