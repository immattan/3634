<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:background="#f4f3f2">

    <TextView
        android:id="@+id/textTutName2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:textStyle="bold"
        android:gravity="center"
        />

    <Button
        android:id="@+id/activateAttend"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:text="Enable Attendance"
        android:gravity="center"/>

    <Button
        android:id="@+id/deactivateAttend"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Disable" />

    <ListView
        android:id="@+id/listViewStudents"
        android:layout_width="309dp"
        android:layout_height="506dp"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/textTutName2"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="257dp" />

</LinearLayout>